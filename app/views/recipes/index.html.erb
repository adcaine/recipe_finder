<table border="1">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd')%>>
      <td><%= link_to image_tag(recipe["image_url"], size: "100x100"), recipe["f2f_url"]%></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["f2f_url"]  %></td>
      <td><%= number_with_precision(recipe["social_rank"], :precision => 0)  %></td>
    </tr>
  <% end %>
</table>
<p>Powered by <%= link_to "Food2Fork", "http://www.food2fork.com" %></p>
